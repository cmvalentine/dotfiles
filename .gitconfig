[user]
    name    = <name>
    email   = <email>
[alias]
    a       = add
    aa      = add --all
    b       = branch
    bd      = branch -d
    ca      = commit -a
    cam     = commit -am
    cl      = clone
    cm      = commit -m
    co      = checkout
    cob     = checkout -b
    com     = checkout main
    cr      = commit --amend -m # commit rename
    dfs     = diff --staged
    fp      = fetch --prune
    ls      = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    pl      = pull
    ph      = push
    rb      = rebase
    rc      = commit --amend --no-edit # recommit
    s       = status
    ss      = status -s
    uc      = reset --soft HEAD~1 # uncommit
    us      = reset HEAD -- # unstage
[color]
    ui      = auto
[pull]
    rebase  = false
