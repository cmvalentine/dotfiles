[user]
    name    = <name>
    email   = <email>
[alias]
    a       = add
    br      = branch
    brd     = branch -d
    ca      = commit -a
    cam     = commit -am
    cl      = clone
    cm      = commit -m
    co      = checkout
    cob     = checkout -b
    com     = checkout main
    dfs     = diff --staged
    ls      = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    ll      = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    rh      = reset --hard
    s       = status
    ss      = status -s
[color]
    ui      = auto
